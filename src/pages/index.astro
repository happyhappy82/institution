---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import PolicyCard from '../components/PolicyCard.astro';
import { getSortedPoliciesData } from '../lib/policies';

const policies = getSortedPoliciesData();
const description = "각종 정부지원금, 정책자금 등 정보를 얻어가실 수 있습니다. 정부 보조금 및 장려금 정보, 지원금 등 내가 받을 수 있는 지원금 혜택 확인하기";
---

<Layout title="정부지원금 알리미" description={description}>
  <Header />
  <div class="relative -top-[10px] flex flex-col gap-8">
    {policies.length === 0 ? (
      <p>No policies yet. Create your first property in content/policies/</p>
    ) : (
      policies.map((policy) => (
        <PolicyCard
          key={policy.slug}
          title={policy.title}
          date={policy.date}
          excerpt={policy.excerpt}
          slug={policy.slug}
          lightColor={policy.lightColor}
        />
      ))
    )}
  </div>
</Layout>
