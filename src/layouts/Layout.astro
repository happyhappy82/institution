          gtag('js', new Date());
          gtag('config', 'G-VSMT731ZCL');
        });
      } else {
        setTimeout(() => {
          const script = document.createElement('script');
          script.src = 'https://www.googletagmanager.com/gtag/js?id=G-VSMT731ZCL';
          script.async = true;
          document.head.appendChild(script);

          gtag('js', new Date());
          gtag('config', 'G-VSMT731ZCL');
